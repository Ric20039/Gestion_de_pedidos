@model Gestion_de_pedidos.Models.PedidoViewModel
@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<div class="container-fluid">
    <div class="row">
        <!-- Contenido principal -->
        <div class="col-md-9">
            <h2 class="my-4">Gestión de Pedidos</h2>

            <!-- Tabla de pedidos -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <strong>Lista de Pedidos</strong>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cantidad</th>
                                    <th>Fecha</th>
                                    <th>Cliente</th>
                                    <th>Comercial</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pedido in Model.Pedidos)
                                {
                                    <tr>
                                        <td>@pedido.Cantidad</td>
                                        <td>@pedido.Fecha.ToString("yyyy-MM-dd")</td>
                                        <td>@pedido.Nombre_Cliente</td>
                                        <td>@pedido.Nombre_Comercial</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <a href="/" class="btn btn-secondary mt-3">← Volver al inicio</a>
                </div>
            </div>
        </div>

        <!-- Barra lateral derecha -->
        <div class="col-md-3">
            <div class="sticky-top" style="top: 20px;">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <strong>Consultas Especiales</strong>
                    </div>
                    <div class="card-body">
                        <a href="/comerciales" class="btn btn-outline-primary w-100 mb-2">👔 Comerciales</a>
                        <a href="/clientes" class="btn btn-outline-primary w-100 mb-2">👥 Top Ventas</a>
                        <a href="/pedidos" class="btn btn-outline-primary w-100 mb-2">📦 Menos Ventas</a>
                        <a href="/productos" class="btn btn-outline-primary w-100">⭐ Productos Estrella</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
