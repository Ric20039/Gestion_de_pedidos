@model List<Gestion_de_pedidos.Models.ViewModels.PedidoClienteViewModel>

@{
    ViewData["Title"] = "Pedidos del Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">Pedidos del Cliente @ViewBag.ClienteId</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.Fecha.ToShortDateString()</td>
                    <td>@pedido.Producto</td>
                    <td>@pedido.Cantidad</td>
                    <td>@pedido.PrecioUnitario</td>
                    <td>@pedido.Total</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="ClientesDelComercial" class="btn btn-secondary">Volver</a>
</div>
